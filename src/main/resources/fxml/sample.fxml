        <Tab text="Товари">
            <content>
                <AnchorPane>
                    <children>
                        <TableView onMouseClicked="#onClickTableView" fx:id="tableProduct" minHeight="0.0" minWidth="0.0" prefHeight="100.0" prefWidth="377.0" AnchorPane.bottomAnchor="40.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
