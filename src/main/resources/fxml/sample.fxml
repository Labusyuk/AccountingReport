                                <TableColumn prefWidth="75.0" text="Тип" fx:id="typeColumn"  />
                                <TableColumn prefWidth="75.0" text="Оптова ціна" fx:id="wholesalePriceColumn"  />
                                <TableColumn prefWidth="75.0" text="Роздрібна ціна" fx:id="retailPriceColumn"  />
                                <TableColumn prefWidth="75.0" text="Постачальник" fx:id="providerColumn"  />
                                <TableColumn prefWidth="75.0" text="Кількість" fx:id="countColumn"  />
                            </columns>
                        </TableView>
                        <AnchorPane maxHeight="50.0" prefHeight="30.0" prefWidth="200.0" AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                            <children>
                                <TextField fx:id="fieldId" layoutY="2.0" maxWidth="75.0" minHeight="30.0" prefHeight="30.0" prefWidth="149.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0" />
                                <TextField fx:id="fieldName" maxHeight="30.0" maxWidth="75.0" minHeight="30.0" AnchorPane.leftAnchor="75.0" AnchorPane.topAnchor="0.0" />
                                <TextField fx:id="fieldType" maxWidth="75.0" minHeight="30.0" prefHeight="30.0" AnchorPane.leftAnchor="150.0" />
                                <TextField fx:id="fieldWholesalePrice" maxHeight="30.0" maxWidth="75.0" prefHeight="30.0" AnchorPane.leftAnchor="225.0" />
                                <TextField fx:id="fieldRetailPrice" minHeight="30.0" prefWidth="75.0" AnchorPane.leftAnchor="300.0" />
                                <TextField fx:id="fieldProvider" maxHeight="30.0" maxWidth="75.0" minHeight="30.0" AnchorPane.leftAnchor="375.0" />
                                <TextField fx:id="fieldCount" maxWidth="75.0" minHeight="30.0" AnchorPane.leftAnchor="450.0" />
